<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <!-- Toolbar 생략 (변경 없음) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:background="@drawable/background_white"
        app:titleTextColor="@android:color/white">

        <ImageView
            android:id="@+id/calendar_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_calendar"
            android:contentDescription="뒤로가기" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="5dp"
            android:text="Selected Date"
            android:textColor="@android:color/black"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/select_transport_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_filter_green" />

        <ImageView
            android:id="@+id/load_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_reload_green" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:background="@drawable/background_white">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent">
            <!-- NestedScrollView 내용 생략 (변경 없음) -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#80FFFFFF"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:backgroundTint="#DB4437"
                            android:background="@drawable/background_radius_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="걷기"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:backgroundTint="#E56730"
                            android:background="@drawable/background_radius_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="달리기"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:backgroundTint="#F4B400"
                            android:background="@drawable/background_radius_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자전거"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:backgroundTint="#0F9D58"
                            android:background="@drawable/background_radius_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자동차"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/background_radius_white"
                            android:backgroundTint="#89C17E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="버스"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/background_radius_white"
                            android:backgroundTint="#4285F4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="기차 "
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:backgroundTint="#03A9F4"
                            android:background="@drawable/background_radius_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="지하철"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#80FFFFFF"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">



                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:backgroundTint="#4B0082"
                            android:background="@drawable/background_radius_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오토바이"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:backgroundTint="#9933CC"
                            android:background="@drawable/background_radius_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전기자전거 "
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:backgroundTint="#7C4700"
                            android:background="@drawable/background_radius_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="킥보드"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/background_radius_white"
                            android:backgroundTint="#997950" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="택시"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:backgroundTint="#2E2E2E"
                            android:background="@drawable/background_radius_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나머지"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/toggle_distance_button"
                            android:layout_marginLeft="8dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_drop_up" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#80FFFFFF"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/text_distance_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="Distance Info" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- 오른쪽 하단에 버튼 추가 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:id="@+id/test_map"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="8dp"-->
<!--                android:background="@drawable/background_green_dark"-->
<!--                android:text="TEST"-->
<!--                android:textColor="@color/white"-->
<!--                android:visibility="visible"-->
<!--                />-->

            <ImageButton
                android:id="@+id/find_now_locate_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:layout_gravity="start"
                android:textColor="@color/white"
                android:background="@drawable/ic_location_searching"
                />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>