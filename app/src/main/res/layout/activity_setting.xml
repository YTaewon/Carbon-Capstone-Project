<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"> <!-- 전체 배경색 추가 (선택 사항) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/headerBackground"
            app:titleTextColor="@android:color/white">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:src="@drawable/ic_back_button"
                android:contentDescription="뒤로가기"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="5dp"
                android:text="설정"
                android:textColor="@android:color/white"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/save_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_save"
                android:contentDescription="새로고침"/>

        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:background="@android:color/white">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal">
                    <!-- 프로필 이미지 -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/user"
                        app:civ_border_color="@color/black"
                        app:civ_border_width="1dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="프로필 이미지" />

                    <androidx.constraintlayout.utils.widget.MotionButton
                        android:id="@+id/profile_image_change"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:elevation="8dp"
                        android:text="이미지 변경"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/background_white"/>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <RelativeLayout
                    android:id="@+id/setting_ai_low_power_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:visibility="gone"
                    android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="AI 저전력 모드 (정확도가 낮아 집니다)"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_ai_low_power_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="false"/>
            </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!-- 계정 관리 -->
                <TextView
                    android:id="@+id/setting_account_management"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="계정 관리"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    app:drawableEndCompat="@drawable/ic_chevron_right" />

                <TextView
                    android:id="@+id/setting_app_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="앱 정보"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:drawableEndCompat="@drawable/ic_chevron_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!-- 앱 버전 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="앱 버전"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/tv_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="1.0.0"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!-- 로그아웃 -->
                <TextView
                    android:id="@+id/setting_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textSize="16sp"
                    android:textColor="#DB4437"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>